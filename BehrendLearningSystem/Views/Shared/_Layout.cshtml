<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=11" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Behrend Learning System</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    @*<script src="~/Content/ClientSide.js"></script>*@
</head>
<body id="site">
    <div class="header row">
        <div class="text-center col-md-3 bls" >
            <ul>
                <li id="dropdown-parent-Courses" class="col-md-12">@Html.ActionLink("Courses", "CoursePage", "Home", new { area = "" }, new { @class = "navbar-brand" })</li>

            </ul>
            @*<label onclick="showCourses()">+</label>*@
            <span class="glyphicon glyphicon-chevron-down whitetext" onclick="showCourses()"></span>

        </div>
        <div class="col-md-6">
            <div class="col-md-12 navbar-header bls center">
                @Html.ActionLink("Behrend Learning System", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
        </div>
        @if ((string)Session["username"] == "" || (string)Session["username"] == null)
        {
            <div class="col-md-3">
                <div class="col-xs-6 bls">@Html.ActionLink("Login", "Logon", "Home", new { area = "" }, new { @class = "navbar-brand" })</div>
                <div class="col-xs-6 bls">@Html.ActionLink("Register", "Register", "Home", new { area = "" }, new { @class = "navbar-brand" })</div>
                @*show LogIn or register an Account*@
            </div>
        }
        else
        {
            <div class="col-md-3 whitetext">
                <div class="col-xs-4 bls" id="profilepic"></div>
                <div class="col-xs-4 bls" >
                    <label class="profileheader" onclick="GoToProfile()">@Session["displayname"]</label>
                </div>
                <div class="col-xs-3 bls">
                <label class="profileheader">Badges</label>
                </div>
                <div class="col-xs-1 bls">
                    <label class="profileheader">@Session["badgecount"]</label>
                </div>
                @*show user name and link to their profile, also # of badges*@
            </div>

        }

    </div>
    <div>
        <div id="dropdown-dest-Courses" class="row">
            @*<h3>Courses:</h3>*@
            @*<label>Cmpsc 121</label>*@
            <label id="courselink">@Html.ActionLink("CMPSC 122", "CoursePage", "Home", new { courseID = "CMPSC 122" }, new { @class = "navbar-brand" })</label>
        </div>
    </div>
    
    <div class="container body-content site-content">
        @RenderBody()
        <!--Body-->
        <br />
        
    </div>
    <div class="footer row">
        <div class="col-md-4 hidden-sm hidden-xs padfoot">
            <img class="logo" src="~/Images/BehrendLogo.png" />
        </div>
        <div class="col-md-4 col-sm-7 col-xs-12 center padfoot">
                <h3>&copy; @DateTime.Now.Year - Behrend Learning System</h3>
        </div>
        <div class="col-md-4">

        </div>
    </div>
    <!--Footer-->
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    <script>
        function showCourses() {
            var s = document.getElementById("dropdown-dest-Courses").style.display;
            if (s == "block") {
                document.getElementById("dropdown-dest-Courses").style.display = "none";
            }
            else {
                document.getElementById("dropdown-dest-Courses").style.display = "block";
            }
        }

        function GoToProfile() {
            location.href = 'UserPage';
        }

    </script>
</body>
</html>
